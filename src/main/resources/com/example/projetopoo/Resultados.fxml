<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: #111;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projetopoo.ResultadosController">
    <children>
        <Text fill="WHITE" layoutX="600.0" layoutY="150.0" strokeType="OUTSIDE" strokeWidth="0.0" text="RESULTADOS" textAlignment="CENTER" wrappingWidth="724.0">
            <font><Font name="Jersey 10 Regular" size="96.0" /></font>
        </Text>

        <VBox alignment="CENTER" layoutX="710.0" layoutY="200.0" spacing="10.0">
            <Text fx:id="textScore" fill="YELLOW" text="Pontuação: 0">
                <font><Font name="Jersey 10 Regular" size="48.0" /></font>
            </Text>
            <Text fx:id="textMaxCombo" fill="CYAN" text="Maior Combo: 0">
                <font><Font name="Jersey 10 Regular" size="36.0" /></font>
            </Text>
        </VBox>

        <VBox layoutX="800.0" layoutY="350.0" spacing="5.0">
            <Text fx:id="textPerfeito" fill="CYAN" text="PERFEITO: 0"><font><Font size="24.0" /></font></Text>
            <Text fx:id="textOtimo" fill="LIME" text="ÓTIMO: 0"><font><Font size="24.0" /></font></Text>
            <Text fx:id="textRuim" fill="ORANGE" text="RUIM: 0"><font><Font size="24.0" /></font></Text>
            <Text fx:id="textErro" fill="RED" text="ERROU: 0"><font><Font size="24.0" /></font></Text>
        </VBox>

        <VBox alignment="CENTER" layoutX="760.0" layoutY="600.0" spacing="20.0">
            <Text fill="WHITE" text="Adicione seu nome ao placar:">
                <font><Font size="20.0" /></font>
            </Text>
            <TextField fx:id="inputNome" alignment="CENTER" prefHeight="50.0" prefWidth="400.0" promptText="Seu Nickname">
                <font><Font size="24.0" /></font>
            </TextField>
            <Button fx:id="botaoMenu" mnemonicParsing="false" prefHeight="70.0" prefWidth="300.0" style="-fx-background-color: #FFD700; -fx-text-fill: black;" text="SALVAR E SAIR">
                <font><Font name="System Bold" size="25.0" /></font>
            </Button>
        </VBox>
    </children>
</AnchorPane>