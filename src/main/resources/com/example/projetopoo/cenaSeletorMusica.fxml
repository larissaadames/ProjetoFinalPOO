<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane fx:id="root"
            prefHeight="1080.0" prefWidth="1920.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projetopoo.SeletorMusicaController">

    <children>

        <!-- CARD 1 -->
        <StackPane fx:id="card1"
                   layoutX="261.0" layoutY="176.0"
                   prefWidth="404.0" prefHeight="626.0"
                   styleClass="song-card">
            <children>
                <Rectangle arcHeight="16.0" arcWidth="16.0"
                           width="404.0" height="626.0"
                           fill="#111111" stroke="#2a2a2a" strokeWidth="3"/>
                <ImageView fitHeight="610.0" fitWidth="388.0">
                    <image>
                        <!-- ajuste o caminho conforme sua pasta de imagens -->
                        <Image url="@Images/shrekalbum.jpg"/>
                    </image>
                </ImageView>
                <Rectangle fx:id="cursor1" styleClass="cursor"
                           arcHeight="20.0" arcWidth="20.0"
                           width="404.0" height="626.0"
                           fill="transparent" strokeWidth="0"/>
            </children>
        </StackPane>

        <!-- CARD 2 -->
        <StackPane fx:id="card2"
                   layoutX="750.0" layoutY="176.0"
                   prefWidth="404.0" prefHeight="626.0"
                   styleClass="song-card">
            <children>
                <Rectangle arcHeight="16.0" arcWidth="16.0"
                           width="404.0" height="626.0"
                           fill="#111111" stroke="#2a2a2a" strokeWidth="3"/>
                <ImageView fitHeight="610.0" fitWidth="388.0">
                    <image>
                        <Image url="@Images/numb.jpg"/>
                    </image>
                </ImageView>
                <Rectangle fx:id="cursor2" styleClass="cursor"
                           arcHeight="20.0" arcWidth="20.0"
                           width="404.0" height="626.0"
                           fill="transparent" strokeWidth="0"/>
            </children>
        </StackPane>

        <!-- CARD 3 -->
        <StackPane fx:id="card3"
                   layoutX="1254.0" layoutY="176.0"
                   prefWidth="404.0" prefHeight="626.0"
                   styleClass="song-card">
            <children>
                <Rectangle arcHeight="16.0" arcWidth="16.0"
                           width="404.0" height="626.0"
                           fill="#111111" stroke="#2a2a2a" strokeWidth="3"/>
                <ImageView fitHeight="610.0" fitWidth="388.0">
                    <image>
                        <Image url="@Images/trazPaVida.jpg"/>
                    </image>
                </ImageView>
                <Rectangle fx:id="cursor3" styleClass="cursor"
                           arcHeight="20.0" arcWidth="20.0"
                           width="404.0" height="626.0"
                           fill="transparent" strokeWidth="0"/>
            </children>
        </StackPane>

    </children>
</AnchorPane>
