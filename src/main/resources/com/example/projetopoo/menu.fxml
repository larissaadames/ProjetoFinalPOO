<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root"
            prefHeight="1080" prefWidth="1920"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.projetopoo.MenuController">

    <!-- CAMADA DO FUNDO (cor sólida ou imagem se quiser depois) -->
    <AnchorPane style="-fx-background-color: #0d0020;">
        <children>

            <!-- CAMADA DOS RAIOS -->
            <Pane fx:id="lightningLayer"
                  prefWidth="1920"
                  prefHeight="1080"
                  style="-fx-background-color: transparent;"
            />

            <!-- TÍTULO CENTRAL -->
            <Label fx:id="title"
                   text="POWERJORGE"
                   layoutX="560"
                   layoutY="180"
                   style="-fx-text-fill: white;"
            >
                <font>
                    <Font size="96"/>
                </font>
            </Label>

            <!-- MENU PRINCIPAL -->
            <VBox fx:id="menuBox"
                  layoutX="780"
                  layoutY="400"
                  spacing="25"
                  style="-fx-alignment: center;">
                <children>

                    <Label text="JOGAR"
                           style="-fx-text-fill: white; -fx-font-size: 48;"
                    />
                    <Label text="CRÉDITOS"
                           style="-fx-text-fill: white; -fx-font-size: 48;"
                    />
                    <Label text="SAIR"
                           style="-fx-text-fill: white; -fx-font-size: 48;"
                    />

                </children>
            </VBox>

        </children>
    </AnchorPane>

</AnchorPane>
